<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_600"
    android:layout_height="@dimen/dp_120">

    <TextView
        android:id="@+id/tv_title_item_0_sleep_schedule"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toTopOf="@id/tv_content_item_0_sleep_schedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content_item_0_sleep_schedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingStart="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_20"
        android:background="@drawable/bg_button_selector"
        android:gravity="center_vertical"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_item_0_sleep_schedule" />

    <ImageView
        android:id="@+id/iv_more_item_0_sleep_schedule"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/ic_navigate_next_white"
        app:layout_constraintTop_toTopOf="@id/tv_content_item_0_sleep_schedule"
        app:layout_constraintBottom_toBottomOf="@id/tv_content_item_0_sleep_schedule"
        app:layout_constraintEnd_toEndOf="@id/tv_content_item_0_sleep_schedule"
        android:contentDescription="@null" />
</androidx.constraintlayout.widget.ConstraintLayout>