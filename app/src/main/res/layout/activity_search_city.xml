<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_search_city"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_search" />

    <EditText
        android:id="@+id/et_search_city"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_60"
        android:layout_alignBottom="@+id/iv_search_city"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_50"
        android:hint="@string/search_city"
        android:inputType="text"
        android:singleLine="true"
        android:textColor="@color/text"
        android:textColorHint="@color/text"
        android:textSize="@dimen/sp_28"
        app:layout_constraintBottom_toBottomOf="@+id/iv_search_city"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_search_city"
        app:layout_constraintTop_toTopOf="@+id/iv_search_city" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_city"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/et_search_city"
        app:layout_constraintStart_toStartOf="@+id/et_search_city"
        app:layout_constraintTop_toBottomOf="@+id/et_search_city" />

</androidx.constraintlayout.widget.ConstraintLayout>
