<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_alarm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/dp_20"
        android:overScrollMode="never"
        app:layout_constraintBottom_toTopOf="@+id/tv_edit_alarm"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_edit_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:background="@drawable/oval_selector_blue"
        android:gravity="center"
        android:paddingStart="@dimen/dp_50"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_15"
        android:text="@string/edit"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_add_alarm"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_add_alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oval_selector_blue"
        android:gravity="center"
        android:paddingStart="@dimen/dp_50"
        android:paddingTop="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_50"
        android:paddingBottom="@dimen/dp_15"
        android:text="@string/add"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_alarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_edit_alarm"
        app:layout_constraintTop_toTopOf="@+id/tv_edit_alarm" />

</androidx.constraintlayout.widget.ConstraintLayout>