<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main">

    <ImageView
        android:id="@+id/iv_wifi_main"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_10"
        android:contentDescription="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_60"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginEnd="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_photo_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/cl_alarm_clock_settings_main"
            app:layout_constraintEnd_toStartOf="@+id/cl_music_video_main"
            app:layout_constraintHorizontal_weight="0.57"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="0.6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_photo1_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@id/cl_photo2_main"
                app:layout_constraintEnd_toStartOf="@id/cl_photo3_main"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/v_start_photo1_main"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="match_parent"
                    android:background="#F9B375"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/v_top_photo1_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#F9B375"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/v_end_photo1_main"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:background="#F9B375"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/v_bottom_photo1_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:background="#F9B375"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_photo1_main"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/v_bottom_photo1_main"
                    app:layout_constraintEnd_toStartOf="@id/v_end_photo1_main"
                    app:layout_constraintStart_toEndOf="@id/v_start_photo1_main"
                    app:layout_constraintTop_toBottomOf="@id/v_top_photo1_main" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_photo2_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cl_photo1_main"
                app:layout_constraintStart_toStartOf="@id/cl_photo1_main"
                app:layout_constraintTop_toBottomOf="@id/cl_photo1_main">

                <View
                    android:id="@+id/v_start_photo2_main"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="match_parent"
                    android:background="#F9B375"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/v_top_photo2_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_4"
                    android:background="#F9B375"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/v_end_photo2_main"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:background="#F9B375"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/v_bottom_photo2_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#F9B375"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_photo2_main"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/v_bottom_photo2_main"
                    app:layout_constraintEnd_toStartOf="@id/v_end_photo2_main"
                    app:layout_constraintStart_toEndOf="@id/v_start_photo2_main"
                    app:layout_constraintTop_toBottomOf="@id/v_top_photo2_main" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_photo3_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintStart_toEndOf="@id/cl_photo1_main"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/v_start_photo3_main"
                    android:layout_width="@dimen/dp_4"
                    android:layout_height="match_parent"
                    android:background="#F9B375"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/v_top_photo3_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#F9B375"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/v_end_photo3_main"
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="match_parent"
                    android:background="#F9B375"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/v_bottom_photo3_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_8"
                    android:background="#F9B375"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <ImageView
                    android:id="@+id/iv_photo3_main"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:contentDescription="@null"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toTopOf="@id/v_bottom_photo3_main"
                    app:layout_constraintEnd_toStartOf="@id/v_end_photo3_main"
                    app:layout_constraintStart_toEndOf="@id/v_start_photo3_main"
                    app:layout_constraintTop_toBottomOf="@id/v_top_photo3_main" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_alarm_clock_settings_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/cl_photo_main"
            app:layout_constraintStart_toStartOf="@id/cl_photo_main"
            app:layout_constraintTop_toBottomOf="@id/cl_photo_main"
            app:layout_constraintVertical_weight="0.4">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_alarm_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="#33CCFF"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cl_clock_main"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_alarm_main"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_alarm"
                        app:layout_constraintBottom_toTopOf="@+id/tv_alarm_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_alarm_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/alarm"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_alarm_main" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_clock_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_20"
                android:background="#3CB371"
                app:layout_constraintBottom_toBottomOf="@id/cl_alarm_main"
                app:layout_constraintEnd_toStartOf="@+id/cl_settings_main"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cl_alarm_main"
                app:layout_constraintTop_toTopOf="@id/cl_alarm_main">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_clock_main"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_clock"
                        app:layout_constraintBottom_toTopOf="@+id/tv_clock_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_clock_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/clock"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_clock_main" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_settings_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/dp_20"
                android:background="#B49ADB"
                app:layout_constraintBottom_toBottomOf="@id/cl_clock_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/cl_clock_main"
                app:layout_constraintTop_toTopOf="@id/cl_clock_main">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_settings_main"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_settings_main"
                        app:layout_constraintBottom_toTopOf="@+id/tv_settings_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_settings_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_settings_main" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_music_video_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@id/cl_alarm_clock_settings_main"
            app:layout_constraintEnd_toStartOf="@+id/cl_weather_calendar_main"
            app:layout_constraintHorizontal_weight="0.2"
            app:layout_constraintStart_toEndOf="@+id/cl_photo_main"
            app:layout_constraintTop_toTopOf="@id/cl_photo_main">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_music_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#FFA70C"
                app:layout_constraintBottom_toTopOf="@id/cl_video_main"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_music_main"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_music"
                        app:layout_constraintBottom_toTopOf="@+id/tv_music_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_music_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/music"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_music_main" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_video_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#FF7323"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cl_music_main"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="@id/cl_music_main"
                app:layout_constraintTop_toBottomOf="@+id/cl_music_main">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_video_main"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_video"
                        app:layout_constraintBottom_toTopOf="@+id/tv_video_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_video_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/video"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_28"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/iv_video_main" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_weather_calendar_main"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="@id/cl_music_video_main"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="0.23"
            app:layout_constraintStart_toEndOf="@+id/cl_music_video_main"
            app:layout_constraintTop_toTopOf="@id/cl_music_video_main">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_weather_main"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#60D89A"
                app:layout_constraintBottom_toTopOf="@+id/cl_calendar_main"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="1.5">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_no_weather_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_title_no_weather_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:id="@+id/iv_title_no_weather_main"
                            android:layout_width="@dimen/dp_30"
                            android:layout_height="@dimen/dp_30"
                            android:contentDescription="@null"
                            app:layout_constraintEnd_toStartOf="@id/tv_title_no_weather_main"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/ic_positioning" />

                        <TextView
                            android:id="@+id/tv_title_no_weather_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unknown"
                            android:textColor="@color/text"
                            android:textSize="@dimen/sp_24"
                            app:layout_constraintBottom_toBottomOf="@id/iv_title_no_weather_main"
                            app:layout_constraintStart_toEndOf="@id/iv_title_no_weather_main"
                            app:layout_constraintTop_toTopOf="@id/iv_title_no_weather_main" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:id="@+id/tv_content_no_weather_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_20"
                        android:gravity="center"
                        android:text="@string/positioning_desc"
                        android:textColor="@color/text"
                        android:textSize="@dimen/sp_24"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/cl_title_no_weather_main" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_content_weather_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_current_content_weather_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toTopOf="@id/v_content_weather_main"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <TextView
                            android:id="@+id/tv_city_current_content_weather_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/iv_weather_current_content_weather_main"
                            android:layout_width="@dimen/dp_60"
                            android:layout_height="@dimen/dp_60"
                            android:contentDescription="@null"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_city_current_content_weather_main" />

                        <TextView
                            android:id="@+id/tv_temp_current_content_weather_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_24"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/iv_weather_current_content_weather_main" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <View
                        android:id="@+id/v_content_weather_main"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1"
                        android:background="@color/divider"
                        app:layout_constraintBottom_toTopOf="@id/rv_content_weather_main" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_content_weather_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_calendar_main"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#3366CC"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cl_weather_main"
                app:layout_constraintStart_toStartOf="@id/cl_weather_main"
                app:layout_constraintTop_toBottomOf="@id/cl_weather_main"
                app:layout_constraintVertical_weight="1">

                <TextView
                    android:id="@+id/tv_time_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_28"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tv_month_main"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
