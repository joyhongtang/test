<?xml version="1.0" encoding="utf-8"?>
<com.idwell.cloudframe.widget.SlideView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_ring"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_alarm_ring"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:contentDescription="@null"
            android:src="@drawable/ic_alarm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_sliding_tip_ring"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/anim_sliding_tip"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_alarm_ring"
            android:contentDescription="@null" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:text="@string/right_slide_close_alarm_clock"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_sliding_tip_ring"
            app:layout_constraintStart_toEndOf="@+id/iv_sliding_tip_ring"
            app:layout_constraintTop_toTopOf="@+id/iv_sliding_tip_ring" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.idwell.cloudframe.widget.SlideView>
