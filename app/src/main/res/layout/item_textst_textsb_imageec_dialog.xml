<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@drawable/bg_light_dialog_content"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_title_item_textst_textsb_imageec_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light_dialog_content"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toTopOf="@id/tv_content_item_textst_textsb_imageec_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_content_item_textst_textsb_imageec_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_light_dialog_content"
        android:textSize="@dimen/sp_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_title_item_textst_textsb_imageec_dialog"
        app:layout_constraintTop_toBottomOf="@id/tv_title_item_textst_textsb_imageec_dialog" />

    <ImageView
        android:id="@+id/iv_item_textst_textsb_imageec_dialog"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>