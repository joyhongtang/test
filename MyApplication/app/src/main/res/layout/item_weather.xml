<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_20"
    android:layout_marginEnd="@dimen/dp_20"
    android:layout_marginBottom="@dimen/dp_20"
    android:background="@drawable/bg_item_weather"
    android:paddingStart="@dimen/dp_10"
    android:paddingTop="@dimen/dp_20"
    android:paddingEnd="@dimen/dp_10">

    <TextView
        android:id="@+id/tv_date_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_weather_item_weather"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_100"
        app:layout_constraintTop_toBottomOf="@id/tv_date_item_weather"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/tv_weather_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        app:layout_constraintStart_toEndOf="@+id/iv_weather_item_weather"
        app:layout_constraintTop_toTopOf="@+id/iv_weather_item_weather" />

    <TextView
        android:id="@+id/tv_temp_item_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        app:layout_constraintStart_toStartOf="@+id/tv_weather_item_weather"
        app:layout_constraintTop_toBottomOf="@+id/tv_weather_item_weather" />

</androidx.constraintlayout.widget.ConstraintLayout>