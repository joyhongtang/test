<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp_600"
    android:layout_height="@dimen/dp_80">

    <EditText
        android:id="@+id/et_content_item_type_1_lan_city_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:background="@drawable/bg_button_selector"
        android:inputType="textNoSuggestions"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/sp_24"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_title_item_type_1_lan_city_time"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.7" />

    <TextView
        android:id="@+id/tv_title_item_type_1_lan_city_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/bg_button_selector"
        android:textColor="@color/text"
        android:textSize="@dimen/sp_24"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/et_content_item_type_1_lan_city_time"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_weight="0.3" />
</androidx.constraintlayout.widget.ConstraintLayout>