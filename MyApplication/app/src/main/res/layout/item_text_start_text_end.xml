<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">

    <TextView
        android:id="@+id/tv_title_item_text_start_text_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_10"
        android:gravity="center_vertical"
        android:textColor="@color/text"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toStartOf="@id/tv_content_item_text_start_text_end"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_content_item_text_start_text_end"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:gravity="center|end"
        android:textColor="@color/text"
        android:textSize="@dimen/sp_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toEndOf="@id/tv_title_item_text_start_text_end" />
</androidx.constraintlayout.widget.ConstraintLayout>